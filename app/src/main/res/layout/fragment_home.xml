<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="40dp">

       <ImageView

           android:id="@+id/hot_news"
           android:layout_marginLeft="12dp"
           android:layout_centerVertical="true"
           android:src="@drawable/icon_msg_box_normal"
           android:layout_width="20dp"
           android:layout_height="20dp" />

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="20dp"
              android:layout_centerInParent="true"
              android:layout_marginLeft="12dp"
              android:background="@drawable/icon_main_logo" />

          <ImageView

              android:id="@+id/search"
              android:layout_marginRight="10dp"
              android:layout_alignParentRight="true"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:layout_centerVertical="true"
              android:src="@drawable/icon_search_normal" />


     </RelativeLayout>
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="35dp">

         <android.support.design.widget.TabLayout
              app:tabIndicatorHeight="0dp"
             android:textSize="16sp"
             android:id="@+id/tab"
             app:tabSelectedTextColor="@color/appColor"
             app:tabMode="scrollable"
             android:layout_width="match_parent"
             android:layout_height="40dp"/>
         <ImageView
             android:visibility="gone"
             android:background="#FFFFFF"
             android:layout_centerVertical="true"
             android:src="@drawable/icon_symbol_add_green"
             android:id="@+id/icon_category"
             android:layout_alignParentRight="true"
             android:layout_width="20dp"

             android:layout_height="match_parent" />
     </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_grey"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>