<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/appColor</item>
    </style>
    <style name="TextAppearanceHome" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="RecycleViewCommon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="news_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="setting_item_back">
        <item name="android:clickable">true</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/setting_item_selector</item>
    </style>

    <style name="myedittext" parent="Theme.AppCompat.Light">



        <item name="colorControlNormal">@color/appColor</item>
        <item name="colorControlActivated">@color/appColor</item>
    </style>
</resources>
